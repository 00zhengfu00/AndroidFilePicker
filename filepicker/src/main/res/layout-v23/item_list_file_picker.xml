<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list_file_picker"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="8dp"
    >

    <TextView
        android:id="@+id/tv_list_file_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:layout_centerVertical="true"
        android:scrollHorizontally="true"
        android:textColor="@color/shrine_text_color"
        android:textSize="16sp"
        tools:text="SD 存储卡SD 存储卡SD"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/iv_icon_list_file_picker"
        android:layout_toStartOf="@id/cb_list_file_picker"
        android:layout_toLeftOf="@id/cb_list_file_picker"
        android:layout_toRightOf="@id/iv_icon_list_file_picker"
        android:layout_marginLeft="16dp"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/iv_icon_list_file_picker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:contentDescription="File Icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/cb_list_file_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEEEEE"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>